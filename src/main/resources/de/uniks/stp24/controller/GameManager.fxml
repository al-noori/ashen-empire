<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/21.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.controller.GameManagerController">
   <HBox prefHeight="0.0" prefWidth="0.0" />
   <HBox alignment="CENTER">
      <VBox maxWidth="1200.0" prefWidth="400.0" spacing="5.0" styleClass="PopUpsBackground" >
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
         </padding>
         <Label styleClass="mediumText" text="%name">
            <font>
               <Font size="20.0"/>
            </font>
         </Label>
         <TextField fx:id="nameInput" styleClass="inputTextField">
         </TextField>
         <Label styleClass="mediumText" text="%password">

         </Label>
         <PasswordField fx:id="passwordInput" styleClass="inputTextField">
         </PasswordField>
         <Label styleClass="mediumText" text="%mapsize">

         </Label>
         <TextField fx:id="mapSizeInput" styleClass="inputTextField">
         </TextField>
      </VBox>
   </HBox>
   <Label styleClass="error-label" fx:id="statusLabel" text="Label" visible="false">
      <font>
         <Font size="20.0"/>
      </font>
   </Label>
   <HBox alignment="CENTER" prefHeight="0.0" prefWidth="0.0" spacing="50.0">
      <Button fx:id="cancelButton" styleClass="primary-button" style="-fx-font-size: 25px" mnemonicParsing="false"
              onMouseClicked="#cancel" text="%cancel" >
         <font>
            <Font size="24.0"/>
         </font>
      </Button>
      <Button fx:id="saveChangesButton" styleClass="primary-button" style="-fx-font-size: 25px"
              mnemonicParsing="false" onMouseClicked="#saveChanges" text="%save.changes">
         <font>
            <Font size="24.0"/>
         </font>
      </Button>
   </HBox>
</VBox>
