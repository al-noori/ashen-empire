<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.StackPane?>
<StackPane fx:id="stackpane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.controller.CreateEmpireController">
    <VBox maxWidth="800.0" maxHeight="500.0" styleClass="PopUpsBackground" alignment="CENTER">
        <HBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
            <VBox alignment="CENTER_LEFT" spacing="10.0">
                <Text styleClass="mediumText"  strokeType="OUTSIDE" strokeWidth="0.0" text="%name" />
                <TextField fx:id="nameInput" prefHeight="25.0" prefWidth="270.0" styleClass="inputTextField"/>
                <Text styleClass="mediumText"  strokeType="OUTSIDE" strokeWidth="0.0" text="%colour">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Text>
                <ComboBox fx:id="selectColour" styleClass="inputTextField" editable="true" onAction="#colorSelectAction" prefHeight="25.0" prefWidth="270.0" />
                <Text styleClass="mediumText"  strokeType="OUTSIDE" strokeWidth="0.0" text="%description">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Text>
                <TextField fx:id="descriptionInput" styleClass="inputTextField" prefHeight="25.0" prefWidth="270.0" />
                <HBox prefHeight="100.0" prefWidth="200.0" />
                <Button fx:id="backButton" alignment="CENTER" mnemonicParsing="false" onAction="#back" prefHeight="40.0" prefWidth="105.0" styleClass="primary-button" text="%back">
                    <VBox.margin>
                        <Insets left="80.0" top="20.0" />
                    </VBox.margin>
                </Button>
            </VBox>
            <Region maxWidth="50.0" minWidth="50.0" />
            <VBox alignment="CENTER_LEFT" spacing="10.0">
                <Text styleClass="mediumText"  strokeType="OUTSIDE" strokeWidth="0.0" text="%flag" />
                <ComboBox fx:id="selectFlag" styleClass="inputTextField" editable="true" onAction="#flagSelectAction" prefHeight="25.0" prefWidth="270.0" />
                <Text styleClass="mediumText"  strokeType="OUTSIDE" strokeWidth="0.0" text="%portrait">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Text>
                <ComboBox fx:id="selectPortrait" styleClass="inputTextField" editable="true" onAction="#portraitSelectAction" prefHeight="25.0" prefWidth="270.0" />
                <Button fx:id="traitsButton" alignment="CENTER" mnemonicParsing="false" onAction="#selectTraits" styleClass="primary-button" text="%select.traits">
                    <VBox.margin>
                        <Insets left="80.0" top="40.0" />
                    </VBox.margin>
                </Button>
                <HBox prefHeight="108.0" prefWidth="270.0" />
                <Button fx:id="saveButton" alignment="CENTER" mnemonicParsing="false" onAction="#save" prefHeight="40.0" prefWidth="105.0" styleClass="primary-button" text="%save">
                    <VBox.margin>
                        <Insets left="80.0" />
                    </VBox.margin>
                </Button>
            </VBox>
        </HBox>
    </VBox>
</StackPane>
