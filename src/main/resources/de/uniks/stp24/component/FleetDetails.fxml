<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.FleetDetailsComponent">
   <VBox fx:id="editNameHolder" prefHeight="200.0" prefWidth="300.0" AnchorPane.bottomAnchor="150.0" AnchorPane.rightAnchor="800.0" />
    <VBox prefWidth="450.0" styleClass="fleetDetails" AnchorPane.bottomAnchor="150.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="100.0">
        <Text fx:id="fleetName" fill="#ffd52c" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="bigText" text="Name">
         <VBox.margin>
            <Insets left="10.0" top="10.0" />
         </VBox.margin></Text>
        <Text fx:id="currentLocation" fill="#ffd52c" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" text="* CURRENT LOC: ">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin></Text>
      <Text fx:id="tankfactoryAvailable" fill="#00ffbf" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" text="* TANK FACTORY AVAILABLE">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin></Text>
      <Text fx:id="currentSize" fill="#ffd52c" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" text="* CURRENT SIZE: ">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin></Text>
      <Text fx:id="plannedSize" fill="#ffd52c" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" text="* PLANNED SIZE: ">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin></Text>
      <Text fill="#ffd52c" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="mediumText" text="Tanks:">
         <VBox.margin>
            <Insets left="10.0" top="5.0" />
         </VBox.margin>
      </Text>
        <VBox alignment="TOP_CENTER" styleClass="fleetDetails">
            <VBox.margin>
                <Insets left="5.0" right="5.0" top="10.0" />
            </VBox.margin>
         <ListView fx:id="fleetDetailsList" styleClass="fleetListView">
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </ListView>
            <Button mnemonicParsing="false" onAction="#planNewTanks" styleClass="primary-button" text="%fleetDetails.planNewTanks" textAlignment="CENTER">
            <VBox.margin>
               <Insets bottom="5.0" top="5.0" />
            </VBox.margin></Button>
        </VBox>
        <HBox alignment="TOP_CENTER" spacing="20.0">
            <Button onAction="#cancel" styleClass="primary-button" text="%fleetDetails.cancel" />
            <Button onAction="#edit" styleClass="primary-button" text="%fleetDetails.editName" />
            <Button onAction="#save" styleClass="primary-button" text="%fleetDetails.save" />
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
        </HBox>
    </VBox>
</fx:root>
