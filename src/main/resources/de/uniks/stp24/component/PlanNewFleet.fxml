<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.PlanNewFleetComponent">
    <VBox styleClass="fleetDetails" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="100.0">
        <HBox alignment="CENTER_LEFT">
            <Text fill="#ffd52c" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="mediumText" text="Name: ">
                <VBox.margin>
                    <Insets left="10.0" top="10.0" />
                </VBox.margin>
            </Text>
         <VBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" />
            <TextField fx:id="fleetName" prefWidth="200.0">
            <HBox.margin>
               <Insets right="50.0" />
            </HBox.margin></TextField>
         <VBox.margin>
            <Insets left="10.0" top="10.0" />
         </VBox.margin>
        </HBox>
        <HBox alignment="CENTER_LEFT">
            <Text fill="#ffd52c" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="mediumText" text="Fraction: ">
                <VBox.margin>
                    <Insets left="10.0" top="10.0" />
                </VBox.margin>
            </Text>
         <VBox HBox.hgrow="ALWAYS" />
         <ChoiceBox fx:id="locationChoices" prefWidth="200.0">
            <HBox.margin>
               <Insets right="50.0" />
            </HBox.margin></ChoiceBox>
         <VBox.margin>
            <Insets left="10.0" top="10.0" />
         </VBox.margin>
        </HBox>
        <HBox alignment="CENTER">
            <Text fill="#ffd52c" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" text="%planNewFleet.info" textAlignment="CENTER" wrappingWidth="300.0" />
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
        </HBox>
      <ListView fx:id="fleetDetailsList" styleClass="fleetListView">
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </VBox.margin></ListView>
        <HBox alignment="TOP_CENTER" spacing="140.0">
            <Button onAction="#cancel" styleClass="primary-button" text="Cancel" />
            <Button onAction="#save" styleClass="primary-button" text="Save" />
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
        </HBox>
    </VBox>
</fx:root>
