                <Image url="@../ships/tank_icon_green.png" />
            </image>
        </ImageView>
        <Text fx:id="tankNumber" styleClass="smallText">
            <font>
                <Font size="8.0" />
            </font>
        </Text>
        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icons/hp.png" />
        </ImageView>
        <Text fx:id="healthNumber" styleClass="smallText">
            <font>
                <Font size="8.0" />
            </font>
        </Text>
        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icons/exp_icon.png" />
        </ImageView>
        <Text fx:id="experienceNumber" styleClass="smallText">
            <font>
                <Font size="8.0" />
            </font>
        </Text>
