<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="BOTTOM_CENTER" maxHeight="90.0" prefWidth="217.0" type="VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.GameControlMenuComponent">
   <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="63.0" prefWidth="377.0" styleClass="control-menu" alignment="CENTER">
      <Label fx:id="timeLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="59.0" prefWidth="134.0" styleClass="time-label" text="2050, 12:23" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <ButtonBar buttonMinWidth="0.0" prefHeight="63.0" prefWidth="246.0" HBox.hgrow="ALWAYS" >
         <buttons>
            <Button fx:id="zeroSpeedButton" contentDisplay="CENTER" minHeight="0.0" minWidth="0.0" mnemonicParsing="false" onAction="#zeroSpeedUp" prefHeight="50.0" prefWidth="50.0" styleClass="speed-button">
               <graphic>
                  <ImageView fx:id="pauseImage" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button fx:id="regularSpeedButton" contentDisplay="CENTER" minHeight="0.0" minWidth="0.0" mnemonicParsing="false" onAction="#regularSpeedUp" prefHeight="50.0" prefWidth="50.0" styleClass="speed-button">
               <graphic>
                  <ImageView fx:id="playImage" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button fx:id="doubleSpeedButton" contentDisplay="CENTER" minHeight="0.0" minWidth="0.0" mnemonicParsing="false" onAction="#doubleSpeedUp" prefHeight="50.0" prefWidth="50.0" styleClass="speed-button">
               <graphic>
                  <ImageView fx:id="doubleSpeedImage" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button fx:id="tripleSpeedButton" minHeight="0.0" minWidth="0.0" mnemonicParsing="false" onAction="#tripleSpeedUp" prefHeight="50.0" prefWidth="50.0" styleClass="speed-button">
               <graphic>
                  <ImageView fx:id="tripleSpeedImage" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
         </buttons>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </ButtonBar>
   </HBox>
   <Label fx:id="gameStatusLabel" alignment="CENTER" styleClass="mediumText"  text="%game.status" />
</fx:root>
