<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<fx:root onMouseClicked="#clickOnCard" alignment="CENTER" spacing="10" prefHeight="100.0" prefWidth="100.0" styleClass="traitsCard"  type="VBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.TraitCardComponent">
   <Label fx:id="traitNameLabel" alignment="CENTER" styleClass="traitsCardNameText" />
   <Label fx:id="traitPointsLabel" alignment="CENTER" styleClass="traitsCardText" />
   <Label fx:id="traitConflictsLabel" alignment="CENTER" styleClass="traitsCardText" />
   <Label fx:id="traitEffectsLabel" alignment="CENTER" styleClass="traitsCardText" maxWidth="260.0" wrapText="true"/>
   <VBox fx:id="traitEffectsBox" alignment="CENTER" />
   <Button fx:id="selectButton" alignment="CENTER" styleClass="selected-button" mnemonicParsing="false" onAction="#selectTraitCard" text="%select" />
</fx:root>
