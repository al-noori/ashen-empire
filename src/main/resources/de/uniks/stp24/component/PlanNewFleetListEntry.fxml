<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<fx:root prefHeight="70.0" prefWidth="300.0" type="HBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.PlanNewFleetListEntryComponent">
   <ImageView fx:id="tankTypeImg" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
      <HBox.margin>
         <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
      </HBox.margin>
   </ImageView>
   <VBox HBox.hgrow="ALWAYS">
      <Text fx:id="tankName" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" text="TankName">
         <VBox.margin>
            <Insets left="5.0" top="3.0" />
         </VBox.margin>
      </Text>
      <HBox alignment="CENTER">
         <VBox.margin>
            <Insets top="3.0" />
         </VBox.margin>
         <VBox HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets left="5.0" />
            </HBox.margin>
            <Text fx:id="speed" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" text="SPEED: " />
            <Text fx:id="hp" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" text="HP: " />
         </VBox>
         <Region />
         <VBox HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets left="5.0" right="5.0" />
            </HBox.margin>
            <Text fx:id="maxAtk" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" text="MAX ATK: " />
            <Text fx:id="maxDef" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" text="MAX DEF:" />
         </VBox>
         <Region />
         <Text fx:id="counter" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" text="COUNTER" HBox.hgrow="ALWAYS" />
         <Region />
         <VBox HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" />
            </HBox.margin>
            <Button maxHeight="20.0" maxWidth="20.0" minHeight="20.0" minWidth="20.0" mnemonicParsing="false" onAction="#plus" prefHeight="20.0" prefWidth="20.0"  text="+" styleClass="verySmallButton">
               <font>
                  <Font size="8.0" />
               </font>
            </Button>
            <Button maxHeight="20.0" maxWidth="20.0" minHeight="20.0" minWidth="20.0" mnemonicParsing="false" onAction="#minus" prefHeight="20.0" prefWidth="20.0"  text="-" styleClass="verySmallButton">
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
         </VBox>
      </HBox>
   </VBox>
</fx:root>
