<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="de.uniks.stp24.component.GameOver"
            prefHeight="600.0" prefWidth="600.0" >

    <BorderPane styleClass="PopUpsBackground" minHeight="450.0"  maxHeight="300" maxWidth="500"
                minWidth="500.0" AnchorPane.bottomAnchor="300.0" AnchorPane.leftAnchor="600.0" AnchorPane.rightAnchor="600.0" AnchorPane.topAnchor="300.0">
        <center>
            <VBox alignment="CENTER" spacing="10">
                <Label text="%game.over" styleClass="bigText"/>
                <ImageView fx:id="imageView" fitWidth="200" fitHeight="200"/>
                <HBox spacing="10" alignment="CENTER">
                    <Button minWidth="200" onMouseClicked="#onLeaveGameClicked" text="%leave.game" styleClass="primary-button"/>
                    <Button minWidth="200" onMouseClicked="#onGoToSpectatorModeClicked" text="%continue.as.spectator" styleClass="primary-button"/>
                </HBox>
            </VBox>
        </center>
            </BorderPane>
</fx:root>
