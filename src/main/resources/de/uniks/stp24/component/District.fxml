<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<fx:root alignment="CENTER" spacing="15.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.DistrictComponent">
    <styleClass>
        <String fx:value="yellow-text-small" />
    </styleClass>
    <VBox alignment="CENTER">
        <HBox.margin>
            <Insets left="20.0" />
        </HBox.margin>
        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="80.0" prefWidth="80.0" styleClass="green-border">
            <ImageView fx:id="districtImage" fitHeight="75.0" fitWidth="75.0" onMouseEntered="#showDistrictInfo" onMouseExited="#hideDistrictInfo" pickOnBounds="true" preserveRatio="true" />
        </HBox>
        <Label fx:id="districtNameLabel" alignment="CENTER" contentDisplay="CENTER" maxWidth="150.0" styleClass="yellow-text" text="NAME" textAlignment="CENTER" wrapText="true" />
    </VBox>
    <VBox alignment="CENTER">
        <HBox.margin>
            <Insets bottom="20.0" top="20.0" />
        </HBox.margin>
        <GridPane prefHeight="100.0" prefWidth="150.0" fx:id="gridPane"/>
    </VBox>
    <Button fx:id="plusButton" mnemonicParsing="false" onMouseClicked="#plusButton" styleClass="Fraction-details-button" text="+">
        <HBox.margin>
          <Insets left="10.0" right="10.0" />
        </HBox.margin>
    </Button>
    <Button fx:id="deleteButton" mnemonicParsing="false" onMouseClicked="#deleteButton" styleClass="Fraction-details-button" text="-" />
</fx:root>
