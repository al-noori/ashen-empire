<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Polygon?>
<?import java.lang.*?>
<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="de.uniks.stp24.component.NotificationsComponent">
    <StackPane>
        <padding>
            <Insets left="15.0"/>
        </padding>

        <Polygon styleClass="notification">
            <points>
                <Double fx:value="0.0"/>
                <Double fx:value="0.0"/>
                <Double fx:value="300.0"/>
                <Double fx:value="0.0"/>
                <Double fx:value="300.0"/>
                <Double fx:value="100.0"/>
                <Double fx:value="150.0"/>
                <Double fx:value="150.0"/>
                <Double fx:value="0.0"/>
                <Double fx:value="100.0"/>
            </points>
        </Polygon>
        <VBox alignment="TOP_CENTER" spacing="15">
            <Label text="%notification" styleClass="greenMediumText"/>
            <HBox alignment="CENTER">
                <Label fx:id="message" textAlignment="CENTER" styleClass="greenSmallText">

                </Label>
                <ImageView fx:id="imageView" fitHeight="50" fitWidth="50"/>
            </HBox>
        </VBox>
    </StackPane>
</fx:root>
