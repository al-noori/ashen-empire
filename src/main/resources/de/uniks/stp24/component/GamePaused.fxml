<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.GamePausedComponent">


    <BorderPane styleClass="gamePaused" AnchorPane.bottomAnchor="200.0" AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="500.0" AnchorPane.topAnchor="200.0">
        <top>
            <Text fx:id="pauseText" fill="FFF8E1" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 40px;" text="Game paused" textAlignment="CENTER" styleClass="bigText" BorderPane.alignment="CENTER" />
        </top>
        <center>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                 <Button fx:id="musicButton" mnemonicParsing="false" onAction="#playMusic" prefHeight="40.0" prefWidth="40.0" styleClass="music-button" textAlignment="CENTER">
                     <graphic>
                         <ImageView fx:id="musicButtonImage" fitHeight="25.0" fitWidth="25.0" onDragDetected="#playMusic" pickOnBounds="true" preserveRatio="true">
                             <Image url="@/de/uniks/stp24/music/music.png" />
                         </ImageView>
                     </graphic>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
                 </Button>
                 <Button fx:id="achievementsButton" maxWidth="150.0" minWidth="150.0" mnemonicParsing="false" onAction="#achievements" prefWidth="150.0" styleClass="primary-button" text="%achievements">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
                 <Button fx:id="resumeButton" maxWidth="150.0" minWidth="150.0" mnemonicParsing="false" onAction="#resume" prefWidth="150.0" styleClass="primary-button" text="%resume">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
                 </Button>
                 <Button fx:id="backButton" maxWidth="150.0" minWidth="150.0" mnemonicParsing="false" onAction="#backToLobby" prefWidth="150.0" styleClass="primary-button" text="%back.to.lobby">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
                 </Button>
            <BorderPane.margin>
               <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
            </VBox>
        </center>

    </BorderPane>


</fx:root>
