<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="de.uniks.stp24.component.WonTheGameComponent"
         prefHeight="400.0" prefWidth="600.0">

    <BorderPane styleClass="PopUpsBackground" minHeight="450.0" maxWidth="500"
                minWidth="500.0" AnchorPane.bottomAnchor="300.0" AnchorPane.leftAnchor="600.0" AnchorPane.rightAnchor="600.0" AnchorPane.topAnchor="300.0">

        <center>
            <VBox alignment="CENTER" spacing="10">
                <Label text="%won.game" styleClass="bigText"/>
                <ImageView fx:id="imageView" fitWidth="200" fitHeight="200"/>
                <Button minWidth="200" onMouseClicked="#onLeaveGameClicked" text="%leave.game" styleClass="primary-button"/>
                <Button minWidth="200" onMouseClicked="#onContinueClicked" text="%continue" styleClass="primary-button"/>
            </VBox>
        </center>

    </BorderPane>
</fx:root>
